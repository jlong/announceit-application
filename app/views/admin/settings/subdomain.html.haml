- @selected = :settings
- @title = "Change Subdomain"

%h1 Change Subdomain

- form_for :account, :url => admin_settings_path, :html => {:method => :put} do |f|
  %fieldset
    %p
      = f.label :subdomain
      = f.text_field :subdomain, :class => "textbox big", :size => 18
      = ".#{application_domain}"
  .buttons
    = f.submit 'Save Changes'
    or
    = link_to 'Cancel', admin_settings_path
