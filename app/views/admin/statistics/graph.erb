{
  "bg_colour": "#ffffff",
  "tooltip"  : { "shadow": false, "background": "#ffffff" },
  
  "title": {
    "text": "<%= @statistics.title %>",
    "style": "{ font-size: 16; margin-top: 5px; margin-bottom: 10px }"
  },
  
  "elements": [
      {
        "text":      "Unique Visitors",
        "type":      "area_hollow",
        "colour":    "#2285cc",
        "dot-size":  4,
        "fill":      "#2285cc",
        "fill-alpha": 0.25,
        "halo-size": 1,
        "tip":       "#val# Visitors",
        "width":     2<% if @statistics.visitors? %>,
        "values" :   <%= @statistics.visitors.to_json %><% end %>
      },
    
      {
        "text":      "Subscribers",
        "type":      "area_hollow",
        "colour":    "#cc0000",
        "dot-size":  4,
        "halo-size": 1,
        "fill":      "#cc3300",
        "fill-alpha": 0.25,
        "tip":       "#val# Subscribers",
        "width":     2<% if @statistics.subscribes? %>,
        "values" :  <%= @statistics.subscribes.to_json %><% end %>
      }
    ],
  
  "y_axis": {
    "colour": "#cccccc",
    "grid-colour": "#dddddd",
    "max": <%= @statistics.ymax %>,
    "steps": <%= @statistics.ysteps %>
  },
  
  "x_axis": {
    "colour": "#cccccc",
    "grid-colour": "#dddddd",
    "steps": <%= @statistics.xsteps %>,
    "offset": <%= @statistics.kind == 'daily' ? 'true' : 'false' %>,
    "labels": {
      "labels": <%= @statistics.xlabels.inspect %>
    }
  }

}