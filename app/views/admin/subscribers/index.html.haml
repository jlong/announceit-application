- @selected = :subscribers
- @title = "Subscribers"

.index_head
  = will_paginate @subscribers, :previous_label => '&laquo; Prev'
  %p= "#{@subscribers.size} of #{@teaser.subscribers.size} subscribers"

%table.index#subscribers{:border=>0, :cellpadding=>0, :cellspacing=>0}
  %tbody
    - for subscriber in @subscribers
      %tr[subscriber]
        %td.avatar= image_tag gravatar_url(subscriber.email)
        %td.name=h subscriber.name
        %td.email= mail_to subscriber.email
        - if false #disabled
          %td.actions= link_to "Unsubscribe", "#", :confirm => "Are you sure you want to unsubscribe #{h subscriber.name}?"

.index_foot
  = will_paginate @subscribers, :previous_label => '&laquo; Prev'

- if false #disabled
  .download
    %h3 Download:
    %ul
      %li= link_to "E-mail Addresses", :format => "txt"
      %li= link_to "CSV", :format => "csv"